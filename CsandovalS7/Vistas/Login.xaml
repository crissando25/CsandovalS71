<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CsandovalS7.Vistas.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="VENTANA DE LOGIN" FontSize="18" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese el Contraseña" IsPassword="True"/>
            <Button x:Name="btnInicio" Text="Iniciar Sesion" Clicked="btnInicio_Clicked"/>
            <Button x:Name="btnRegistrar" Text="RegistroNuevo" Clicked="btnRegistrar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>