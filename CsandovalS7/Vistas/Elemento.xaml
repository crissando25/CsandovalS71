<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CsandovalS7.Vistas.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar - Eliminar" FontSize="20" HorizontalTextAlignment="Center"/>
            <Entry x:Name="TxtId" Placeholder="ID" IsReadOnly="True"></Entry>
            <Entry x:Name="TxtNombre" Placeholder="Nombre"/>
            <Entry x:Name="TxtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="TxtContraseña" Placeholder="Contraseña"/>
            <Grid>
                <Grid.RowDefinitions>
                   <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnActualizar" Text="ACTUALIZAR" Clicked="btnActualizar_Clicked" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" Grid.Row="0" Grid.Column="1"/>           
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>