<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CsandovalS7.Vistas.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana De Registro" FontSize="18" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese el Contraseña"/>
            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked_1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>